@model StreamPost.ViewModels.LoginViewModel;
@{
    ViewData["Title"] = "Login";
    ViewData["ShowHeaderFooter"] = false;
}
<style>
    section {
        min-height: 90vh; /* Full screen height */
    }

    input.form-control-lg {
        font-size: 0.85rem; /* Smaller font size */
    }

    ::placeholder {
        font-size: 0.85rem; /* Smaller placeholder font size */
        color: #6c757d; /* Placeholder color */
    }
</style>
<section class="d-flex align-items-center justify-content-center p-4">
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <!-- Logo Section -->
            <div class="col-lg-5 col-md-6 d-flex justify-content-center mb-4 mb-md-0">
                <img src="~/images/StreamPost.png" class="img-fluid" style="max-width: 80%; height: auto;" />
            </div>

            <!-- Login Form Section -->
            <div class="col-lg-5 col-md-6 text-black">
                <div class="d-flex flex-column align-items-center">
                    <form method="post" asp-controller="Login" asp-action="Login" class="w-100 px-4" style="max-width: 500px;">
                        @Html.AntiForgeryToken()
                        <h3 class="fw-normal mb-4 text-center" style="letter-spacing: 1px;">Log in</h3>

                        <!-- Email Input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" asp-for="Email">Email address</label>
                            <input type="email" asp-for="Email" class="form-control form-control-lg"  placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Password Input -->
                        <div class="mb-3">
                            <label for="Password" class="form-label">Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control form-control-lg" id="Password" asp-for="Password" placeholder="Enter your password" />
                                <button type="button" class="btn btn-outline-secondary" id="passwordToggle" aria-label="Toggle password visibility">
                                    <i class="bi bi-eye-slash" id="passwordIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        
                        <!-- Remember Me -->
                        <div class="form-outline mb-4">
                            <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
                            <label class="form-label" asp-for="RememberMe">Remember me</label>
                            <span asp-validation-for="RememberMe" class="text-danger"></span>
                        </div>


                        <!-- Login Button -->
                        <div class="pt-1 mb-4 text-center">
                            <button class="btn btn-info btn-lg btn-block w-100" type="submit">Login</button>
                        </div>

                        <!-- Forgot Password -->
                        <p class="small mb-3 text-center">
                            <a class="text-muted" href="#">Forgot password?</a>
                        </p>

                        <!-- Register Link -->
                        <p class="text-center">
                            Don't have an account?
                            <a asp-controller="Signup" asp-action="Signup" class="link-info">Register here</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function(){
        $("#passwordToggle").on("click",function(){
            var passwordField = $("#Password");

            if(passwordField.attr("type") === "password")
            {
                passwordField.attr("type","text");
                $(this).innerHTML('<i class="bi bi-eye"></i>');
            }
            else{
                passwordField.attr("type","password");
                $(this).innerHTML('<i class="bi bi-eye-slash"></i>');
            }
        });
    });
</script>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

